<%= layout("/layouts/boilerplate") %>
    <div class="signin">
        <div class="form-name">
            FIGHT CLUB
        </div>
        <form method="post" action="/users">
            <input name="user[username]" class="form-text form-control form-control-sm" type="text"
                placeholder="Phone number, Username, or Email">
            <input name="user[password]" class="form-text pr-1 form-control form-control-sm" type="password" placeholder="Password">
            <button type="submit" class="btn btn-primary btn-dark form-text submit form-control">Sign In</button>
        </form>
    </div>